<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    tools:context=".Easy">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:src="@drawable/arrow"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/backButton"
            android:text="Press Start"
            android:textColor="@color/white"
            android:fontFamily="@font/jost_variablewght"
            android:textSize="50sp"/>

        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/jost_variablewght"
            android:text="Level 1\n0/4"
            android:textAlignment="center"
            android:visibility="invisible"
            android:textColor="@color/white" />

        <RelativeLayout
            android:id="@+id/squaresLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <Button
                android:id="@+id/sq1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@color/red"/>
            <Button
                android:id="@+id/sq2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_toEndOf="@id/sq1"
                android:background="@color/blue"/>

            <Button
                android:id="@+id/sq3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_below="@id/sq1"
                android:background="@color/green"/>

            <Button
                android:id="@+id/sq4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_below="@id/sq2"
                android:layout_toEndOf="@id/sq3"
                android:background="@color/yellow"/>

        </RelativeLayout>

        <android.widget.Button
            android:id="@+id/startBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="START"
            android:textColor="@color/white"
            android:fontFamily="@font/jost_variablewght"
            android:textFontWeight="700"
            android:background="@drawable/rectangle_light"
            />


    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>