<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.GuessThePattern" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/dark_grey_100</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_grey_100</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="TitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SnackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/dark_grey_100</item>
    </style>


</resources>
